<h1><%= @title %></h1>


<h1>Add Meetup</h1>

<form action="/create_meetup" method="post">
  <div>
    <label for="name">Name:</label>
    <input type="text" id="name" name="meetup[name]">
  </div>

  <div>
    <label for="location">Location:</label>
    <input type="text" id="location" name="meetup[location]">
  </div>

    <div>
      <label for="description">Description:</label>
      <textarea id="description" name="meetup[description]"></textarea>
    </div>


  <div>
    <label for="date">Date:</label>
    <input type="text" id="date" name="meetup[date]">
  </div>

  <input type="submit" value="Add Meetup">
</form>
